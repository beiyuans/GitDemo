
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/sc/jquery-1.8.0.js"></script>
    <script src="~/sc/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(function () {
            $("#btn").click(function () {
               
            })
        })
    </script>
</head>
<body> 
    <div>
        @*ajax 作用就是无刷新界面   不管是按钮或表单提交   都是把信息提交到本界面中*@
        @using (Ajax.BeginForm("add", "ajax", new AjaxOptions()
            {
                HttpMethod = "post",
                UpdateTargetId = "div1",
                InsertionMode = InsertionMode.InsertAfter

        }))
        {
        @:id<input type="text" name="id" />
        @:name<input type="text" name="name" />
        @:age<input type="text" name="age" />
        <input type = "submit" value = "提交" />
        }
    </div>
  
    <div id="div1"> 
        <h1>阿加西</h1>
    </div>
    <form >
        姓名：<input type="text" name="name" />
        密码：<input type="text" name="pwd" />
        <input type="submit"  value="提交" id="btn"/>
    </form>
   
</body>
</html>
